<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sapo.MainPage"
             Shell.NavBarIsVisible="false">
    <Grid>

        <Image  Source="fazendinha.jpg"
                Aspect="Fill"/>

        <Image x:Name="cabritinho"
                WidthRequest="150"
                Source="cabritinhop1rrr.png"
                HorizontalOptions="Start"
                VerticalOptions="End"/>

        <Image x:Name="capivarao"
                WidthRequest="150"
                Source="capivarinhap1rrroo.png"
                HorizontalOptions="Center"
                VerticalOptions="End"/>

        <Image x:Name="raposaMtoloka"
                WidthRequest="150"
                Source="raposaop1.png"
                HorizontalOptions="End"
                VerticalOptions="End"/>
        
         <Label Text="Fazendinha"
                TextColor="#d9c812"
                Margin="20"
                FontSize="40"
                FontFamily="Nicolast.otf"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                VerticalOptions="Start"/>

    </Grid>
</ContentPage>
